
@{
    ViewData["Title"] = "Login";
}
@model LoginForm
<div>
    <h1>Connexion</h1>
    <form action="~/Auth/Login" method="post">
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
            <div>
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="text-danger">@ViewBag.ErrorEmail</span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Passwd">Password</label>
            <input asp-for="Passwd" type="password" class="form-control">
            <small id="emailHelp" class="form-text text-muted">Votre mot de passe doit contenir au moins 3 caractères.</small>
            <div>
                <span asp-validation-for="Passwd" class="text-danger"></span>
                <span class="text-danger">@ViewBag.ErrorPasswd</span>
            </div>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Se connecter</button>
    </form>
</div>



