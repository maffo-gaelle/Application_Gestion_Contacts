<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Gestion Contact - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
        <div class="container">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">Gestion Contact</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    {
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-action="Index" asp-controller="Contact">Contacts</a>
                    </li>
                    }
                    @if (sessionManager.User != null && sessionManager.User.IsAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page"asp-area="Admin" asp-action="Index" asp-controller="Home">Administration</a>
                        </li>
                    }

                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-action="Create" asp-controller="Contact">Add Contact</a>
                    </li>
                    @if (sessionManager.User is null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="Login" asp-controller="Auth">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="Signup" asp-controller="Auth">S'inscrire</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="Logout" asp-controller="Auth">@sessionManager.User.LastName (Logout)</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <div class="jumbotron jumbotron-fluid" id="jumbo">
        <h1 class="display-4">Gestion des contacts</h1>
        <hr class="my-5">
    </div>
    <div class="container">
        <div class="col-md-10 offset-1">
            @RenderBody()
        </div>
    </div>
</body>    
</html>
