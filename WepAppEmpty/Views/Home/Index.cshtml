@{
    ViewBag.Title = "Home";
    int @cptPersonnel = 1;
    int @cptProfessionnal = 1;
    int @cptOther = 1;
    int @cptAll = 1;

}
@model AllContacts;
<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item active list-group-item-action" id="list-Category-list" data-toggle="list" href="#list-Category" role="tab" aria-controls="Category">Home</a>
            <a class="list-group-item list-group-item-action" id="list-Personnels-list" data-toggle="list" href="#list-Personnels" onclick="GetPersonnalContact()" role="tab" aria-controls="Personnels">Personnels</a>
            <a class="list-group-item list-group-item-action" id="list-Professionnels-list" data-toggle="list" href="#list-Professionnels" role="tab" aria-controls="Professionnels">Professionnels</a>
            <a class="list-group-item list-group-item-action" id="list-Autres-list" data-toggle="list" href="#list-Autres" role="tab" aria-controls="Autres">Autres</a>
            <a class="list-group-item list-group-item-action" id="list-All-list" data-toggle="list" href="#list-All" role="tab" aria-controls="All">Tous les contacts</a>
        </div>
    </div>
    <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-Category" role="tabpanel" aria-labelledby="list-Category-list">
                <h2>Bienvenue : Application de gestion des contacts</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum</p>
            </div>
            <div class="tab-pane fade" id="list-Personnels" role="tabpanel" aria-labelledby="list-Personnels-list">
                <h2>Contacts Personnels</h2>
                @if (Model.Personnels.Count() == 0)
                {
                    <h5>Aucun contact de cette catégorie trouvé !</h5>
                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Prénom</th>
                                <th scope="col">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Contact c in Model.Personnels)
                            {
                                <tr>
                                    <th scope="row">@(@cptPersonnel++)</th>
                                    <td>@c.LastName</td>
                                    <td>@c.FirstName</td>
                                    <td>@c.Email</td>
                                    <!--<td>-->@*<a href="~/contact/details/@c.Id">Details</a>*@<!--</td>-->
                                    <td><a class="det" asp-action="Details" asp-controller="Contact" asp-area="" asp-route-id="@c.Id">Details</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            <div class="tab-pane fade" id="list-Professionnels" role="tabpanel" aria-labelledby="list-Professionnels-list">
                <h2>Contacts Professionnels</h2>
                @if (Model.Professionnal.Count() == 0)
                {
                    <h4>Aucun contact de cette catégorie trouvé</h4>
                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Prénom</th>
                                <th scope="col">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Contact c in Model.Professionnal)
                            {
                                <tr>
                                    <th scope="row">@(@cptProfessionnal++)</th>
                                    <td>@c.LastName</td>
                                    <td>@c.FirstName</td>
                                    <td>@c.Email</td>
                                    <!--<td>-->@*<a href="~/contact/details/@c.Id">Details</a>*@<!--</td>-->
                                    <td><a class="det" asp-action="Details" asp-controller="Contact" asp-area="" asp-route-id="@c.Id">Details</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            <div class="tab-pane fade" id="list-Autres" role="tabpanel" aria-labelledby="list-Autres-list">
                <h3>Autres Contacts</h3>
                @if (Model.Autres.Count() == 0)
                {
                    <h5>Aucun contact de cette catégorie trouvé</h5>
                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Prénom</th>
                                <th scope="col">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Contact c in Model.Autres)
                            {
                                <tr>
                                    <th scope="row">@(@cptOther++)</th>
                                    <td>@c.LastName</td>
                                    <td>@c.FirstName</td>
                                    <td>@c.Email</td>
                                    <!--<td>-->@*<a href="~/contact/details/@c.Id">Details</a>*@<!--</td>-->
                                    <td><a class="det" asp-action="Details" asp-controller="Contact" asp-area="" asp-route-id="@c.Id">Details</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            <div class="tab-pane fade" id="list-All" role="tabpanel" aria-labelledby="list-All-list">
                <h2>Tous les contacts</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Contact c in Model.GetAllContacts)
                        {
                            <tr>
                                <th scope="row">@(@cptAll++)</th>
                                <td>@c.LastName</td>
                                <td>@c.FirstName</td>
                                <td>@c.Email</td>
                                <!--<td>-->@*<a href="~/contact/details/@c.Id">Details</a>*@<!--</td>-->
                                <td><a class="det" asp-action="Details" asp-controller="Contact" asp-area="" asp-route-id="@c.Id">Details</a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

